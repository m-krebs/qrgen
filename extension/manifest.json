{
  "name": "QRGEN",
  "version": "0.0.3",
  "manifest_version": 3,
  "homepage_url": "https://github.com/m-krebs/qrgen",
  "description": "This is a simple extension that generates QR codes from the current page's URL.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "QRGEN",
    "default_popup": "src/action.html"
  },
  "permissions": ["activeTab"],
  "commands": {
    "_execute_action": {
      "suggested_key": "Ctrl+Shift+Q"
    }
  }
}
