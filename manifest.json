{
  "name": "QRGEN",
  "version": "0.0.1",
  "manifest_version": 2,
  "homepage_url": "https:github.com/m-krebs/qrgen",
  "description": "This is a simple extension that generates QR codes from the current page's URL.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "QRGEN",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": ["activeTab"]
}
